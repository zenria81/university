    <function name="Main" type="None" variable="">
        <parameters/>
        <body>
            <declare name="toplam, sayac, sayi" type="Integer" array="False" size=""/>
            <declare name="ortalama" type="Real" array="False" size=""/>
            <assign variable="toplam" expression="0"/>
            <assign variable="sayac" expression="0"/>
            <output expression="&quot;&#231;ift sayi giriniz&quot;" newline="True"/>
            <input variable="sayi"/>
            <while expression="sayi!=0">
                <if expression="(sayi%2)==0">
                    <then>
                        <assign variable="toplam" expression="toplam + sayi"/>
                        <assign variable="sayac" expression="sayac + 1"/>
                        <output expression="&quot;tekrar sayi giriniz&quot;" newline="True"/>
                    </then>
                    <else>
                        <output expression="&quot;l&#252;tfen &#231;ift sayi giriniz&quot;" newline="True"/>
                    </else>
                </if>
                <input variable="sayi"/>
            </while>
            <assign variable="ortalama" expression="toplam/sayac"/>
            <output expression="&quot;&#231;ift sayilarin ortalamasi:&quot; &amp;ortalama" newline="True"/>
        </body>
    </function>
